@using PeopleAddTable.Data
@model IEnumerable<Person>

<div class="well">
    <h2>Add Person</h2>
    <input type="text" class="form-control add" id="first-name" placeholder="First Name" />
    <br />
    <input type="text" class="form-control add" id="last-name" placeholder="Last Name" />
    <br />
    <input type="text" class="form-control add" id="age" placeholder="Age" />
    <br />
    <button class="btn btn-primary" disabled id="add-person">Add</button>
</div>

<table id="people-table" class="table table-bordered">
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Age</th>
        <th>Delete</th>
        <th>Edit</th>
    </tr>

    @foreach (Person p in Model)
    {
        <tr>
            <td>@p.FirstName</td>
            <td>@p.LastName</td>
            <td>@p.Age</td>
            <td><button class="btn btn-danger delete" data-id="@p.Id">Delete</button>
            <td>
                <button class="btn btn-success edit" data-first-name="@p.FirstName"
                        data-last-name="@p.LastName" data-age="@p.Age" data-id="@p.Id">
                    Edit
                </button>
        </tr>

    }
</table>

<div id="edit-modal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Edit Person</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="form-group col-md-6">
                        <label>First Name</label>
                        <input class="form-control" id="edit-first-name" placeholder="First Name" type="text">
                    </div>
                    <div class="form-group col-md-6">
                        <label>Last Name</label>
                        <input class="form-control" id="edit-last-name" placeholder="Last Name" type="text">
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <label>Age</label>
                        <input class="form-control" id="edit-age" placeholder="Age" type="text">
                    </div>
                    <input type="hidden" id="edit-id" name="id" />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button id="save" class="btn btn-primary">Save Changes</button>
            </div>
        </div>
    </div>
</div>

@section scripts{

    <script src="/Scripts/index.js"></script>
}